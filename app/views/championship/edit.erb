<div class="post"><div class="post-bgtop"><div class="post-bgbtm">
			<h2 class="title"><a href="#">
				總錦標積分管理
			</a></h2>

			<div class="entry">
				
				<%=form_for :point do |f| %>
				<ul>
					<li>
						<strong>
							賽事名稱
						</strong>
						<%=h @point.game.title %>
					</li>

					<li>
						<strong>
							清大得分
						</strong>
						<%= f.text_field :nthu %>
					</li>
					<li>
						<strong>
							交大得分
						</strong>
						<%= f.text_field :nctu %>
					</li>
					<li>
						<strong>
							備註
						</strong>
						<%= f.text_area :remark, :size=>"30x5" %>
					</li>


				</ul>
				<%= f.submit '更新'%>
				<% end %>

			</div>
			<p>
				<%= link_to '所有賽況', :action=>:index %>
			</p>	
</div></div></div>
